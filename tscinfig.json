{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "rootDir",
        "lib": [
            "es2016",
            "es2015"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "."
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}