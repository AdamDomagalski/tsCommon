{
  "name": "tscommon",
  "version": "1.0.0",
  "description": "Basic ts configs",
  "main": "index.js",
  "scripts": {
    "unitTests": "mocha -r ts-node/register 'test/unit/**/*Test.ts' --recursive --exit",
    "tslint": "tslint --fix --project ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/AdamDomagalski/tsCommon.git"
  },
  "keywords": [
    "typescript",
    "tslint",
    "gitignore"
  ],
  "author": "Adam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AdamDomagalski/tsCommon/issues"
  },
    "husky": {
    "hooks": {
      "pre-commit": "echo `Uncomment when ready #npm run unitTests && npm run tslint && npm version patch --no-git-tag-version && git add package.json package-lock.json`"
    }
  },
  "homepage": "https://github.com/AdamDomagalski/tsCommon#readme",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/sinon": "7.5.0",
    "@types/mocha": "5.2.7",
    "husky": "3.0.1",
    "typescript": "3.6.3",
    "tslint": "5.20.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-no-unused-expression-chai": "0.1.4",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "sinon": "7.3.2",
    "testdouble": "3.12.4",
    "mocha": "6.2.0",
    "ts-node": "8.4.1",
    "ts-node-dev": "1.0.0-pre.43"
}
